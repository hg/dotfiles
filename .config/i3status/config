general {
	interval = 5
	colors = true
}

order += "ethernet wg0"
order += "ethernet wgwork"
order += "volume master"
order += "tztime date"
order += "tztime time"

ethernet wg0 {
	format_up = "vpn: %ip"
	format_down = "vpn: no"
}

ethernet wgwork {
	format_up = "work: %ip"
	format_down = "work: no"
}

