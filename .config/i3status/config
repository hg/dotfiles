general {
	interval = 5
	colors = true
}

order += "ethernet wg-work"
order += "ethernet tun0"
order += "volume master"
order += "tztime date"
order += "tztime time"

ethernet wg-work {
	format_up = "work: %ip"
	format_down = "work: no"
}

ethernet tun0 {
	format_up = "tun: %ip"
	format_down = "tun: no"
}

volume master {
	format = "â™ª: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime date {
	format = "%A, %B %d"
}

tztime time {
	format = "%H:%M:%S"
}

